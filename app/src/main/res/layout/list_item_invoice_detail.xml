<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_gray_divider">


    <LinearLayout
        android:id="@+id/cart_item_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:weightSum="6">


        <TextView
            android:id="@+id/invoiceDetail_item_price_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="25000000"
            android:textColor="@color/cart_text_blue"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/global_gray_divider" />

        <TextView
            android:id="@+id/invoiceDetail_item_counter_textView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="counter"
            android:layout_weight="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/global_gray_divider" />

        <TextView
            android:id="@+id/invoiceDetail_item_productName_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ashkan"
            android:layout_weight="3" />

    </LinearLayout>


</RelativeLayout>
