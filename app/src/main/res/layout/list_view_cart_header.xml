<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed" >


    <LinearLayout
        android:id="@+id/cart_header_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:background="@color/global_skyBlue"
        android:weightSum="6">


        <TextView
            android:id="@+id/cart_header_price_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="قیمت کل"
            android:textColor="@color/cart_text_blue"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ededed" />

        <TextView
            android:id="@+id/cart_header_count_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="تعداد"
            android:textColor="@color/cart_text_blue"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ededed" />

        <TextView
            android:id="@+id/cart_header_title_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="شرح محصول"
            android:textColor="@color/cart_text_blue"
            android:textSize="16sp" />


    </LinearLayout>



</RelativeLayout>
