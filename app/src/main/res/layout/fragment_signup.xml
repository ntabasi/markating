<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        tools:context=".MainActivity$PlaceholderFragment">

        <EditText
            android:id="@+id/signUp_fName_editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_wrong"
            android:hint="نام"
            android:inputType="textPersonName"
            android:maxLength="11"
            android:nextFocusUp="@+id/signUp_lName_editText"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />


        <EditText
            android:id="@+id/signUp_lName_editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/signUp_fName_editText"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_wrong"
            android:hint="نام خانوادگی"
            android:inputType="textPersonName"
            android:nextFocusUp="@+id/signUp_password_editText"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/signUp_password_editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/signUp_lName_editText"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_wrong"
            android:hint="کلمه عبور (حداقل 6 کارکتر)"
            android:inputType="textVisiblePassword"
            android:nextFocusUp="@+id/signUp_tell_editText"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/signUp_tell_editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/signUp_password_editText"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_wrong"
            android:digits="0123456789"
            android:hint="تلفن ثابت"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:nextFocusUp="@+id/signUp_cellphone_editText"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/signUp_cellphone_editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/signUp_tell_editText"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_wrong"
            android:hint="شماره همراه (نام کاربری)"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:nextFocusUp="@+id/signUp_email_editText"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/signUp_email_editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/signUp_cellphone_editText"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_item_warranty_num_factor"
            android:hint="پست الکترونیکی"
            android:inputType="textEmailAddress"
            android:nextFocusUp="@+id/signUp_address_editText"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

      <!--  <Spinner
            android:id="@+id/signUp_city_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/signUp_email_editText"/>-->

        <EditText
            android:id="@+id/signUp_address_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUp_email_editText"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_item_warranty_num_factor"
            android:hint="آدرس"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <LinearLayout
            android:id="@+id/signUp_btn_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/signUp_address_editText"
            android:layout_marginTop="10dp"
            android:paddingBottom="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/signUp_cancel_button"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@drawable/selector_dialog_cancel"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/signUp_ok_button"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@drawable/selector_dialog_confirm"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>