<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e7e6"
    tools:context="com.daya.sofaproj.sofaproj.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">



        <ImageView
            android:id="@+id/product_detail_image_imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:src="@drawable/detail_pic" />

        <RelativeLayout
            android:id="@+id/detail_zoom_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_detail_zoom_shape">

            <TextView
                android:id="@+id/detail_zoom_fullScreen_textView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:paddingTop="5dp"
                android:text="مشاهده تصویر به صورت تمام صفحه"
                android:textColor="@color/White"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/detail_zoom_fullScreen_imageView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/detail_zoom_fullScreen_textView"
                android:src="@drawable/detail_zoom_object" />

        </RelativeLayout>

        <View
            android:id="@+id/product_detail_colorBar_view"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/safe_blue_1" />
        <TextView
            android:id="@+id/product_detail_name_textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_blue_background"
            android:gravity="center|top"
            android:text="title drawer"
            android:textColor="#F5F5F5"
            android:textSize="@dimen/product_detail_title_font_size" />

        <TextView
            android:id="@+id/product_detail_price_textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/product_detail_title"
            android:gravity="center|top"
            android:text="290000 ریال "
            android:textColor="#F5F5F5"
            android:textSize="@dimen/detail_label" />

        <ImageView
            android:id="@+id/product_detail_addCart_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:clickable="true"
            android:src="@drawable/icn_add_to_cart"
            android:background="@drawable/selector_detail_add_basket" />

        <View
            android:id="@+id/product_detail_colorBar2_view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#03a9f5" />

        <TextView
            android:id="@+id/product_detail_detail_textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f0f0f0"
            android:gravity="center"
            android:text="توضیحات"
            android:textColor="#03a9f5"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/product_detail_content_textView"
            style="@style/explain"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/White"
            android:textColor="#6f6f6f"
            android:text="@string/warranty_explain" />

    </LinearLayout>

</ScrollView>
