<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/drawer_background">

    <ImageView
        android:id="@+id/drawer_icon_imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/menu_basket" />

    <TextView
        android:id="@+id/drawer_title_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/drawer_icon_imageView"
        android:layout_alignBottom="@id/drawer_icon_imageView"
        android:layout_toLeftOf="@id/drawer_icon_imageView"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:text="text"/>



</RelativeLayout>