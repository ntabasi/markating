<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="explain">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/DimGray</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerInParent">true</item>

    </style>


    <style name="text_view_black">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_view_white">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="hint">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="dialog_message">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>

    </style>

    <style name="fade_animation">
        <item name="@android:windowEnterAnimation">@animator/popup_show</item>
        <item name="@android:windowExitAnimation">@animator/popup_hide</item>
    </style>

</resources>
